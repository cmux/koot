{
    "name": "koot-packages",
    "description": "All modules and packages for Koot.js",
    "private": true,
    "scripts": {
        "doc": "docsify serve docs",
        "bootstrap": "node bootstrap.js",
        "publish": "node ./publish.js",
        "test": "node ./test/index.js",
        "reset": "npm i fs-extra --no-save && node ./reset.js && node bootstrap.js",
        "lerna:changed": "lerna changed",
        "eslint:koot": "eslint \"packages/koot/!(node_modules|logs|dist|dist*|test)/**/*.+(js|jsx)\"",
        "check-types": "tsc --noEmit"
    },
    "workspaces": [
        "packages/*"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/cmux/koot"
    },
    "keywords": [
        "react",
        "isomorphic"
    ],
    "author": {
        "name": "dongwenxiao",
        "email": "cs_victor@126.com"
    },
    "contributors": [
        {
            "name": "diablohu",
            "email": "diablohudream@gmail.com",
            "url": "http://diablohu.com"
        }
    ],
    "bugs": {
        "url": "https://github.com/cmux/koot/issues"
    },
    "homepage": "https://github.com/cmux/koot",
    "engines": {
        "node": ">=10.13.0"
    },
    "license": "Apache-2.0",
    "dependencies": {
        "docsify-cli": "^4.4.1"
    },
    "devDependencies": {
        "camelcase": "^6.0.0",
        "chalk": "^4.1.0",
        "cheerio": "^1.0.0-rc.3",
        "crlf": "^1.1.1",
        "eslint": "^7.6.0",
        "eslint-config-koot": "^1.7.1",
        "fs-extra": "^9.0.1",
        "husky": "^4.2.5",
        "inquirer": "^7.3.3",
        "is-valid-path": "^0.1.1",
        "jest": "^26.2.2",
        "jsdom": "^16.3.0",
        "latest-version": "^5.1.0",
        "lerna": "^3.22.1",
        "lerna-wizard": "^1.1.1",
        "lint-staged": "^10.2.11",
        "prettier": "^2.0.5",
        "prettier-eslint": "^11.0.0",
        "puppeteer": "^5.2.1",
        "simple-git": "^2.17.0",
        "symlink-dir": "^4.1.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,jsx,cjs,mjs}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{xxxxxx}": [
            "tsc --noEmit"
        ],
        "*.{json,md,css,less,sass,scss}": [
            "prettier --write"
        ]
    }
}
