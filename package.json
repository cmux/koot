{
    "name": "koot-packages",
    "description": "All modules and packages for Koot.js",
    "private": true,
    "scripts": {
        "doc": "docsify serve docs",
        "bootstrap": "node bootstrap.js",
        "publish": "node ./publish.js",
        "test": "node ./test/index.js",
        "reset": "node ./reset.js",
        "lerna:changed": "lerna changed",
        "eslint:koot": "eslint \"packages/koot/!(node_modules|logs|dist|dist*|test)/**/*.+(js|jsx)\"",
        "check-types": "tsc --noEmit"
    },
    "workspaces": [
        "packages/*"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/cmux/koot"
    },
    "keywords": [
        "react",
        "isomorphic"
    ],
    "author": {
        "name": "dongwenxiao",
        "email": "cs_victor@126.com"
    },
    "contributors": [
        {
            "name": "diablohu",
            "email": "diablohudream@gmail.com",
            "url": "http://diablohu.com"
        }
    ],
    "bugs": {
        "url": "https://github.com/cmux/koot/issues"
    },
    "homepage": "https://github.com/cmux/koot",
    "engines": {
        "node": ">=8.12.0"
    },
    "license": "Apache-2.0",
    "dependencies": {
        "docsify-cli": "^4.3.0"
    },
    "devDependencies": {
        "camelcase": "^5.3.1",
        "chalk": "^3.0.0",
        "cheerio": "^1.0.0-rc.3",
        "crlf": "^1.1.1",
        "eslint": "^6.6.0",
        "eslint-config-koot": "^1.5.0",
        "fs-extra": "^8.1.0",
        "husky": "^3.0.9",
        "inquirer": "^7.0.0",
        "is-valid-path": "^0.1.1",
        "jest": "^24.9.0",
        "jsdom": "^15.2.1",
        "latest-version": "^5.1.0",
        "lerna": "^3.18.4",
        "lerna-wizard": "^1.1.1",
        "lint-staged": "^9.4.2",
        "prettier": "^1.19.1",
        "prettier-eslint": "^9.0.0",
        "puppeteer": "^2.0.0",
        "simple-git": "^1.126.0",
        "symlink-dir": "^3.1.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,jsx,cjs,mjs}": [
            "eslint --fix",
            "prettier --write",
            "git add"
        ],
        "*.{ts,tsx}": [
            "eslint --fix",
            "prettier --write",
            "git add"
        ],
        "*.{xxxxxx}": [
            "tsc --noEmit"
        ],
        "*.{json,md,css,less,sass,scss}": [
            "prettier --write",
            "git add"
        ]
    }
}
