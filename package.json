{
    "name": "koot-packages",
    "description": "All modules and packages for Koot.js",
    "private": true,
    "type": "module",
    "scripts": {
        "doc": "docsify serve docs",
        "bootstrap": "node bootstrap.js",
        "publish": "node ./publish.js",
        "test": "node ./test/index.js",
        "reset": "npm i fs-extra --no-save --legacy-peer-deps && node ./reset.js && node bootstrap.js",
        "lerna:changed": "lerna changed",
        "eslint:koot": "eslint \"packages/koot/!(node_modules|logs|dist|dist*|test)/**/*.+(js|jsx)\"",
        "check-types": "tsc --noEmit",
        "prepare": "husky install",
        "commit": "npx cz-customizable",
        "up": "npx npm-check-updates -i"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/cmux/koot"
    },
    "keywords": [
        "react",
        "isomorphic"
    ],
    "author": {
        "name": "dongwenxiao",
        "email": "cs_victor@126.com"
    },
    "contributors": [
        {
            "name": "diablohu",
            "email": "diablohudream@gmail.com",
            "url": "http://diablohu.com"
        }
    ],
    "bugs": {
        "url": "https://github.com/cmux/koot/issues"
    },
    "homepage": "https://github.com/cmux/koot",
    "engines": {
        "node": ">=18.0.0"
    },
    "license": "Apache-2.0",
    "dependencies": {
        "docsify-cli": "^4.4.4",
        "sharp": "^0.32.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.6.1",
        "@commitlint/config-conventional": "^17.6.1",
        "camelcase": "^6.2.0",
        "chalk": "^4.1.2",
        "cheerio": "^1.0.0-rc.12",
        "crlf": "^1.1.1",
        "eslint": "^8.38.0",
        "eslint-config-koot": "^4.0.0",
        "fs-extra": "^10.1.0",
        "husky": "^8.0.3",
        "inquirer": "^8.2.4",
        "is-valid-path": "^0.1.1",
        "jest": "^28.1.3",
        "jsdom": "^20.0.0",
        "lerna": "^5.3.0",
        "lerna-wizard": "^1.1.1",
        "lint-staged": "^13.2.1",
        "prettier": "^2.8.7",
        "prettier-eslint": "^15.0.1",
        "puppeteer": "19.9.1",
        "simple-git": "^3.17.0",
        "symlink-dir": "^5.1.1"
    },
    "overrides": {
        "favicons": {
            "sharp": "^0.32.0"
        }
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,jsx,cjs,mjs}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{xxxxxx}": [
            "tsc --noEmit"
        ],
        "*.{json,md,css,less,sass,scss}": [
            "prettier --write"
        ]
    },
    "config": {
        "cz-customizable": {
            "config": ".cz-config.cjs"
        }
    }
}
